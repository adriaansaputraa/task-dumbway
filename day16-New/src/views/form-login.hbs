<!DOCTYPE html>
<html lang="en">
<head>
    <title>Form Login</title>
    <link rel="stylesheet" href="fontawesome/css/all.css">
    <link rel="icon" type="Images/x-icon" href="Image/Escola.png">
    <link rel="stylesheet" href="css/all.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/login.css">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

    #humburger-container{
        display: none;
    }
    </style>

</head>
<body>

<!-- Navigation bar start -->
    <nav>
        <ul>
            <li><a href="/index"><img src="Image/Escola.png" alt=""></a></li>
            <li class="collapse-item"><a href="/">Home</a></li>
        </ul>
        <div class="nav-right collapse-item">
            <a class="rnl" href="/form-register">Register</a>
            <a class="rnl" href="/form-login">Login</a>
            <a class="contact" href="/contact">Contact Me</a>
        </div>
        <div class="nav-right" id="hamburger-btn">
            <button onclick="openHamburger()">
                <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
        </div>
    </nav>
    <div class="hamburger-container" id="hamburger-container">
        <a href="/">Home</a>
        <a href="/add-Project" class="nav-active">Add Project</a>
        <a href="/testimoni">Testimoni</a>
        <a href="/contact">Contact Me</a>
    </div>
<!-- Navigation bar end-->
    <form class="Form-container" action="/form-login" method="POST">
        
        <!-- Title --> 
        <div class="container">
            <h1>LOGIN TO YOUR ACCOUNT</h1>
            <div class="Project-name">

                <label>Email</label>
                <input name="email" type="text" placeholder="Enter your Email..." required>

                <label>Password</label>
                <input name="password" type="password" placeholder="Enter your Password..." required>
            </div>
        <div class="btn-input">
            <button type="submit">Submit</button>
        </div>
        {{#if messages.danger}}
        <div class="Message">
            <p>{{messages.danger}}</p>
        </div>
        {{/if}}
    </form>
</body>

</html>