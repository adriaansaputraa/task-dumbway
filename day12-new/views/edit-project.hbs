<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Project</title>
    <link rel="stylesheet" href="/Assets/fontawesome/css/all.css">
    <link rel="icon" type="Images/x-icon" href="/Assets/Image/Escola.png">
    <link rel="stylesheet" href="/Assets/css/all.css">
    <link rel="stylesheet" href="/Assets/css/nav.css">
    <link rel="stylesheet" href="/Assets/css/myproject.css">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    </style>

</head>
<body>

<!-- Navigation bar start -->
    <nav>
        <ul>
            <li><a href="/"><img src="/Assets/Image/Escola.png" alt=""></a></li>
            <li><a class="collapse-item" href="/">Home</a></li>
            <li><a class="collapse-item active" href="/my-project">My Project</a></li>
        </ul>
        <div class="nav-right collapse-item">
            <a href="/contact">Contact Me</a>
        </div>
        <div class="nav-right" id="hamburger-btn">
            <button onclick="openHamburger()">
                <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
        </div>
    </nav>
    <hr>
    <div>
        <div class="hamburger-container" id="hamburger-container">
            <a href="/">Home</a>
            <hr>
            <a href="/my-project">My Project</a>
            <hr>
            <a href="/contact">Contact Me</a>
        </div>
    </div>
<!-- Navigation bar end-->

    <form class="Form-container" id="Form-Project" method="post" action="edit-Project">
        
        <!-- Title --> 
        <div class="container">
            <h1>EDIT MY PROJECT</h1>
            <div class="Project-name">
                <label>Project Name</label>
                <input name="ProjectName" type="text" value="{{data.ProjectName}}" required>
            </div>
            
            <!-- Date --> 
            <div class="Date-container">
                <div>
                    <label>Start Date</label>
                    <input type="date" name="StartDate" value="{{data.StartDate}}" required>
                </div>
                <div>
                    <label>End Date</label>
                    <input name="EndDate" type="date" value="{{data.EndDate}}" required>
                </div>
            </div>
            
            <!-- Description --> 
            <div class="Descripton-container">
                <label>Descripton</label>
                <textarea name="Description" placeholder="Enter your description..." required>{{data.Description}}</textarea>
            </div>
            

            <!-- Checkbox --> 
            <div class="checkbox">
                <label>Technologies</label>
                <div class="checkbox-group">
                    <div>
                        <input type="checkbox" name="Nodejs" class="multi-input" value="nodejs" {{#if data.Nodejs}}checked{{/if}}/>
                        <label>Node JS</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Golang" class="multi-input" value="golang"{{#if data.Golang}}checked{{/if}}/>
                        <label>Golang</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Reactjs" class="multi-input" value="reactjs" {{#if data.Reactjs}}checked{{/if}}/>
                        <label>React JS</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Javascript" class="multi-input" value="javascript" {{#if data.Javascript}}checked{{/if}}/>
                        <label>Javascript</label>
                    </div>
                </div>
            </div>
            
            <!-- Upload Image --> 
            <div class="Upload-Image">
                <label>Upload Image</label>
                <div class="label-image">
                    <label for="input-image">
                        <p>Choose</p>
                        <span id="file-name"></span>
                        <i class="fa-solid fa-paperclip fa-fw"></i>
                        <input type="file" name= "InputImage" id="input-image" hidden />
                    </label>
                </div>
            </div>
            <button>Submit</button>
        </div>
    </form>


    <div class="card-result">
        <hr>
