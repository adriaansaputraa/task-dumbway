    <form class="Form-container" id="Form-Project" method="post" action="/my-project" onsubmit="addBlog(event)">
        
        <!-- Title --> 
        <div class="container">
            <h1>ADD MY PROJECT</h1>
            <div class="Project-name">
                <label>Project Name</label>
                <input name="ProjectName" type="text" placeholder="Enter your project name..." required>
            </div>
            
            <!-- Date --> 
            <div class="Date-container">
                <div>
                    <label>Start Date</label>
                    <input type="date" name="StartDate" required>
                </div>
                <div>
                    <label>End Date</label>
                    <input name="EndDate" type="date" required>
                </div>
            </div>
            
            <!-- Description --> 
            <div class="Descripton-container">
                <label>Descripton</label>
                <textarea name="Descripton" placeholder="Enter your description..." required></textarea>
            </div>
            

            <!-- Checkbox --> 
            <div class="checkbox">
                <label>Technologies</label>
                <div class="checkbox-group">
                    <div>
                        <input type="checkbox" name="Nodejs" class="multi-input" />
                        <label>Node JS</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Golang" class="multi-input" />
                        <label>Golang</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Reactjs" class="multi-input" />
                        <label>React JS</label>
                    </div>
                    <div>
                        <input type="checkbox" name="Javascript" class="multi-input"/>
                        <label>Javascript</label>
                    </div>
                </div>
            </div>
            
            <!-- Upload Image --> 
            <div class="Upload-Image">
                <label>Upload Image</label>
                <div class="label-image">
                    <label for="input-image">
                        <p>Choose</p>
                        <span id="file-name"></span>
                        <i class="fa-solid fa-paperclip fa-fw"></i>
                        <input type="file" name= "InputImage" id="input-image" hidden />
                    </label>
                </div>
            </div>
            <button>Submit</button>
        </div>
    </form>


